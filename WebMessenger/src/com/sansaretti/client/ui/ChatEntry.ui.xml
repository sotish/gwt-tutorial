<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.name {
			font-style: italic;
			font-weight: bold;
		}
		
		.metin {
			
		}
		
		.entry {
			margin-bottom: 5px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.entry}">
		<g:DecoratorPanel>
			<g:Grid>
				<g:row>
					<g:customCell>
						<g:Label styleName="{style.name}" ui:field="nameLabel" />
					</g:customCell>
					<g:customCell>
						<g:Label styleName="{style.metin}" ui:field="metinLabel" />
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:DecoratorPanel>
	</g:HTMLPanel>
</ui:UiBinder> 